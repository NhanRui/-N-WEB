{{#if this.empty}}
<h5>Không có dữ liệu</h5>
{{else}}
{{#each this.allCourses}}
<div class="course">
    <div class="picture">
        <img src="{{courseImage}}" alt="course-img">
    </div>
    <div class="description">
        <p class="course-name">{{courseName}}</p>
        <p class="author">{{author}}</p>
    </div>
</div>
{{/each}}
{{/if}}
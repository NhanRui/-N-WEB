                        <div class="top-object">
                            <h3 class="top-num">{{top}}</h3>
                            <a href="/course-detail/{{course_id}}"><img src={{intro_image}} class="top-object-image"></a>
                            <form action="/cart/add" method="POST" class="favourite_course_container_top">
                                <input type="hidden" value="{{course_id}}" name="id">
                                <button type="submit">
                                    <i class="fa_ca far fa-heart" id="{{#if isHaving}}faActive{{/if}}"></i>
                                </button>
                            </form>
                            <div class="top-content">
                                <a href="/course-detail/{{course_id}}" class="card-title-in-top">{{description}}</a>
                                <div class="{{course_id}}_new">
                                    <div class="wrap-stars-in-top">
                                        <div class="stars-outer">
                                            <div class="stars-inner"></div>
                                        </div>
                                        <span class="number-rating"><b>{{overall_star}}</b> ({{number_rating}})</span><!--Về sau thay đổi star và number people-->
                                    </div>
                                </div>
                                <script>
                                    var ob_rating="{{{course_id}}}_new";
                                    document.addEventListener('DOMContentLoaded',getRatings({{overall_star}},ob_rating))
                                </script>
                                <div class="price-in-top">
                                    <div class="real-price">{{price}}</div>
                                    <div class="reduce-price">{{reduce_price}}</div>
                                </div>
                            </div>
                        </div>